@model ManagesGlobitelEmployees.Models.RolesModel

@{
    ViewData["Title"] = "Create New Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create New Role</h2>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="CreateRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input readonly asp-for="id" class="form-control" />
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-default" asp-action="RoleList">Back to List</a>
</div>
